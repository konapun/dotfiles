{
  "mcpServers": {
    "Hub": {
      "url": "http://localhost:37373/mcp"
    },
    "fetch": {
      "args": [
        "mcp-server-fetch"
      ],
      "command": "uvx"
    },
    "filesystem": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${ALLOWED_DIRECTORY}"
      ],
      "command": "npx"
    },
    "git": {
      "args": [
        "mcp-server-git",
        "--repository",
        "${REPOSITORY_PATH}"
      ],
      "command": "uvx"
    },
    "github": {
      "headers": {
        "Authorization": "Bearer ${GITHUB_PERSONAL_ACCESS_TOKEN}"
      },
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "sequentialthinking": {
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "command": "npx"
    },
    "time": {
      "args": [
        "mcp-server-time"
      ],
      "command": "uvx"
    }
  }
}
